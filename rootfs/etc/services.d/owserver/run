#!/usr/bin/with-contenv bashio


if bashio::config.true 'debug' ;then
    if ! pgrep -x "/opt/owfs/bin/owserver" > /dev/null
    then
        bashio::log.info "Starting owserver with debug..."
        exec /opt/owfs/bin/owserver --debug -c /etc/owfs.conf --foreground
    fi
else
    if ! pgrep -x "/opt/owfs/bin/owserver" > /dev/null
    then
        bashio::log.info "Starting owserver..."
        exec /opt/owfs/bin/owserver -c /etc/owfs.conf --foreground
    fi
fi
